<div class="edit-techstack">
  <div class="form-edit-container">
    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {{/if}}
    <h3>Edit Tech Stack: {{techStack.nama_tools}}</h3>
    <form action="/edit-techstack/{{techStack.id}}" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label fw-semibold">Gambar Saat Ini</label>
        {{#if techStack.image}}
          <img src="{{techStack.image}}" alt="{{techStack.nama_tools}}" class="current-image" />
        {{else}}
          <p>Tidak ada gambar saat ini.</p>
        {{/if}}
      </div>

      <div class="mb-3">
        <label for="toolsImage" class="form-label fw-semibold">Ganti Gambar (opsional)</label>
        <input type="file" class="form-control" id="toolsImage" name="toolsImage" />
      </div>

      <div class="mb-3">
        <label for="nameTools" class="form-label fw-semibold">Nama Tools</label>
        <input type="text" class="form-control" id="nameTools" name="nama_tools" value="{{techStack.nama_tools}}" required />
      </div>

      <button type="submit" class="btn btn-submit mt-3">Perbarui</button>
      <a href="/dashboard" class="btn btn-secondary w-100 mt-2">Batal</a>
    </form>
  </div>
</div>